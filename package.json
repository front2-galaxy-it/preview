{
  "name": "asset-flow",
  "version": "0.1.0",
  "private": true,
  "engines": {
    "npm": ">=10.2.4",
    "node": ">=20.11.1"
  },
  "scripts": {
    "dev": "next dev -p 4040",
    "build": "next build",
    "start": "next start -p 4040",
    "eslint": "eslint src/**/*.{ts,tsx} --fix --config .eslintrc.json",
    "stylelint": "stylelint **/*.{css,scss} --fix",
    "prettier": "prettier --log-level error --write **/*.{ts,tsx,css,scss}",
    "stop": "npx kill-port 4040"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{(t|j)s?(x),?(s)css}": [
      "npm run prettier",
      "git add ."
    ],
    "*.?(s)css": [
      "git add ."
    ],
    "*.ts?(x)": [
      "npm run eslint",
      "git add ."
    ]
  },
  "dependencies": {
    "@firebase/firestore": "^4.4.2",
    "@fontsource/roboto": "^5.0.8",
    "@reduxjs/toolkit": "^2.2.1",
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/react": "^14.2.1",
    "classnames": "^2.5.1",
    "js-cookie": "^3.0.5",
    "lodash": "^4.17.21",
    "lodash.debounce": "^4.0.8",
    "lodash.throttle": "^4.1.1",
    "next": "^14.1.0",
    "next-intl": "^3.7.0",
    "nodemailer": "^6.9.13",
    "react": "^18",
    "react-dom": "^18",
    "swiper": "^11.2.6"
  },
  "devDependencies": {
    "@types/js-cookie": "^3.0.6",
    "@types/lodash.throttle": "^4.1.9",
    "@types/node": "^20",
    "@types/nodemailer": "^6.4.15",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "@typescript-eslint/eslint-plugin": "^7.0.1",
    "eslint": "^8.56.0",
    "eslint-config-next": "14.1.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prettier": "^5.1.3",
    "husky": "^4.3.8",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5",
    "sass": "^1.71.1",
    "stylelint": "^16.2.1",
    "stylelint-config-recess-order": "^4.6.0",
    "stylelint-config-standard": "^36.0.0",
    "stylelint-config-standard-scss": "^13.0.0",
    "typescript": "^5"
  }
}
